{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../dist/server",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
